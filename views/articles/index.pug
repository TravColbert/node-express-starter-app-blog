extends ../layout-default.pug

block content
    if errors
        .alert.alert-danger
            each error in errors
                p= error.message
    ul
        each article in articles
            li
                a(href=`/articles/${article.id}`)= article.title

block meta
    - var pageTitle = articles.length === 1 ? 'Article' : 'Articles'
    h1= pageTitle
