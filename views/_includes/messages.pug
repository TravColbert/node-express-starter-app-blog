- if (typeof info != 'undefined' && info.length)
  .fade.show.alert.alert-info
    button.close(type='button', data-dismiss='alert') ×
    - if (info.length > 1)
      ul.my-2.px-3
        each inf in info
          li!= inf
    - else 
      | #{info}

- if (typeof errors != 'undefined' && errors.length)
  .fade.show.alert.alert-danger
    ul.my-2.px-3
      each error in errors
        li!= error.error

